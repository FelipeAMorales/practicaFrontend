pipeline {
    agent any

    parameters {
        string(name: 'name_container', defaultValue: 'felipemoralescybertrust', description: 'nombre del docker')
        string(name: 'name_imagen_front', defaultValue: 'practicafrontct', description: 'nombre de la imagen del front')
        string(name: 'tag_imagen', defaultValue: 'latest', description: 'etiqueta de la imagen')
        //string(name: 'puerto_imagen', defaultValue: '81', description: 'puerto a publicar')
        string(name: 'name_imagen_back', defaultValue: 'practicabackct',description: 'nombre de la imagen del back')
    }

    environment {
        name_final_front = "${name_container}/${name_imagen_front}:${tag_imagen}"
        name_final_back = "${name_container}/${name_imagen_back}:${tag_imagen}"
    }

    stages {
        stage('stop/rm_primero') {
            when {
                expression {
                    DOCKER_EXIST = bat(returnStatus: true, script: "docker ps -q --filter name=${name_final_front}")
                    return DOCKER_EXIST.toInteger() != 0
                }
            }
            steps {
                script {
                    sh """
                        docker stop ${name_final_front}
                        docker rm ${name_final_front}
                    """
                }
            }
        }
        stage('stop/rm_segundo') {
            when {
                expression {
                    DOCKER_EXIST = bat(returnStatus: true, script: "docker ps -q --filter name=${name_final_back}")
                    return DOCKER_EXIST.toInteger() != 0
                }
            }
            steps {
                script {
                    sh """
                        docker stop ${name_final_back}
                        docker rm ${name_final_back}
                    """
                }
            }
        }

        stage('Verificar Repo 1') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], 
                          doGenerateSubmoduleConfigurations: false, 
                          extensions: [], 
                          submoduleCfg: [], 
                          userRemoteConfigs: [[credentialsId: 'IDfelipe', url: 'https://github.com/FelipeMoralesCyberTrust/PP-frontend.git']]])
            }
        }

        stage('Build Repo 1') {
            steps {
                script {
                sh """
                        docker build -t ${name_final_front} https://github.com/FelipeMoralesCyberTrust/PP-frontend.git
                    """
                }
            }
        }

        stage('Analisis Repo 1') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'IDsonar', variable: 'USUARIO'),
                                     string(credentialsId: 'JenkinsSonar', variable: 'CONTRASENA')]) {
                        withSonarQubeEnv('SonarCloud') {
                            sh "sonar-scanner \
                            -Dsonar.organization=felipemoralescybertrust \
                            -Dsonar.projectKey=FelipeMoralesCyberTrust_PP-frontend \
                            -Dsonar.sources=. \
                            -Dsonar.host.url=https://sonarcloud.io \
                            -Dsonar.login=${USUARIO}:${CONTRASENA}"
                        }
                    }
                }
            }
        }
        stage('Quality Gate Repo 1') {
            steps {
                timeout(time: 1, unit: 'HOURS') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Verificar Repo 2') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], 
                          doGenerateSubmoduleConfigurations: false, 
                          extensions: [], 
                          submoduleCfg: [], 
                          userRemoteConfigs: [[credentialsId: 'IDfelipe', url: 'https://github.com/FelipeMoralesCyberTrust/PP-backend.git']]])
            }
        }

        stage('Build Repo 2') {
            steps {
                script {
                    sh """
                        docker build -t ${name_final_back} https://github.com/FelipeMoralesCyberTrust/PP-backend.git
                    """
                }
            }
        }
        
        stage('Analisis Repo 2') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'IDsonar', variable: 'USUARIO'),
                                     string(credentialsId: 'JenkinsSonar', variable: 'CONTRASENA')]) {
                        withSonarQubeEnv('SonarCloud') {
                            sh "sonar-scanner \
                            -Dsonar.organization=felipemoralescybertrust \
                            -Dsonar.projectKey=FelipeMoralesCyberTrust_PP-backend \
                            -Dsonar.sources=. \
                            -Dsonar.host.url=https://sonarcloud.io \
                            -Dsonar.login=${USUARIO}:${CONTRASENA}"
                        }
                    }
                }
            }
        }

        stage('Quality Gate Repo 2') {
            steps {
                timeout(time: 1, unit: 'HOURS') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    dir('C:/ProgramData/Jenkins/.jenkins/workspace/pipelineProyecto') {
                        sh 'docker-compose -f jobs/docker-compose.yml up -d'
                }
            } 
        }
    }
} }